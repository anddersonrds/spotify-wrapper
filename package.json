{
  "name": "spotify-wrapper",
  "version": "1.0.0",
  "description": "A wrapper to work with the Spotify Web API.",
  "author": "Anderson Rodrigues <anddersonrds@gmail.com> (https://github.com/anddersonrds)",
  "main": "index.js",
  "scripts": {
    "lint": "eslint src --max-warnings=0",
    "test": "./node_modules/.bin/mocha tests/**/*.spec.js  --require babel-register",
    "test:tdd": "./node_modules/.bin/mocha tests/**/*.spec.js --require babel-register --watch",
    "test:coverage": "nyc yarn test"
  },
  "nyc": {
    "functions": 80,
    "lines": 80,
    "check-coverage": true,
    "reporter": [
      "text",
      "html"
    ],
    "exclude": [
      "tests/**"
    ]
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged"
    }
  },
  "lint-staged": {
    "src/**/*": [
      "yarn lint --fix"
    ]
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/anddersonrds/spotify-wrapper.git"
  },
  "keywords": [
    "js",
    "ts",
    "tdd",
    "library"
  ],
  "homepage": "https://github.com/anddersonrds/spotify-wrapper#readme",
  "bugs": {
    "url": "https://github.com/anddersonrds/spotify-wrapper/issues"
  },
  "license": "MIT",
  "devDependencies": {
    "babel-preset-env": "^1.7.0",
    "babel-register": "^6.26.0",
    "chai": "^4.2.0",
    "eslint": "^7.15.0",
    "eslint-config-airbnb": "^18.2.1",
    "eslint-plugin-import": "^2.22.1",
    "eslint-plugin-jsx-a11y": "^6.4.1",
    "eslint-plugin-react": "^7.21.5",
    "eslint-plugin-react-hooks": "^4.2.0",
    "husky": "^4.3.5",
    "lint-staged": "^10.5.3",
    "mocha": "^8.2.1",
    "node-fetch": "^2.6.1",
    "nyc": "^15.1.0",
    "sinon": "^9.2.2",
    "sinon-chai": "^3.5.0",
    "sinon-stub-promise": "^4.0.0"
  },
  "dependencies": {
    "react": "^17.0.1"
  }
}
