{
  "name": "ts-tdd-course",
  "version": "1.0.0",
  "description": "Nossa biblioteca do curso de JS com TDD na pr√°tica.",
  "author": "Anderson Rodrigues <anddersonrds@gmail.com> (https://github.com/anddersonrds)",
  "main": "index.js",
  "scripts": {
    "lint": "eslint src --max-warnings=0",
    "test": "./node_modules/.bin/mocha tests/**/*.spec.js  --require babel-register",
    "test:tdd": "./node_modules/.bin/mocha tests/**/*.spec.js --require babel-register --watch",
    "test:coverage": "nyc yarn test"
  },
  "nyc": {
    "reporter": ["text", "html"],
    "exclude": ["tests/**"]
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged"
    }
  },
  "lint-staged": {
    "src/**/*": [
      "yarn lint --fix"
    ]
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/anddersonrds/ts-tdd-course.git"
  },
  "keywords": [
    "js",
    "ts",
    "tdd",
    "library"
  ],
  "homepage": "https://github.com/anddersonrds/ts-tdd-course#readme",
  "bugs": {
    "url": "https://github.com/anddersonrds/issues"
  },
  "license": "MIT",
  "devDependencies": {
    "babel-preset-env": "^1.7.0",
    "babel-register": "^6.26.0",
    "chai": "^4.2.0",
    "eslint": "^7.15.0",
    "eslint-config-airbnb": "^18.2.1",
    "eslint-plugin-import": "^2.22.1",
    "eslint-plugin-jsx-a11y": "^6.4.1",
    "eslint-plugin-react": "^7.21.5",
    "eslint-plugin-react-hooks": "^4.2.0",
    "husky": "^4.3.5",
    "lint-staged": "^10.5.3",
    "mocha": "^8.2.1",
    "nyc": "^15.1.0"
  }
}
